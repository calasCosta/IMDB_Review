
    <%- include('components/header') -%>

    <main>

      <h2>Raw Reviews</h2>
      <div class="filter-form">
        <form action="">
          <label for="review-filter"><strong>Show:</strong></label>
          <select id="review-filter" onchange="toggleReviews()">
            <option value="positive">Positive Reviews</option>
            <option value="negative">Negative Reviews</option>
          </select>
        </form>
      </div>

      <div id="positive-reviews-section">
        
        <% if (positiveReviews && positiveReviews.length > 0) { %>
          <table class="reviews-table">
            <thead>
              <tr>
                <th>Nº</th>
                <th>Review</th> 
                <th>Sentiment</th>
              </tr>
            </thead>
            <tbody>
              <% positiveReviews.forEach(function(review, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= review.Review || review.text %></td>
                  <td><%= review.Sentiment || review.sentiment %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No positive reviews found.</p>
        <% } %>
      </div>

      <div id="negative-reviews-section" style="display:none;">
        <% if (negativeReviews && negativeReviews.length > 0) { %>
          <table class="reviews-table">
            <thead>
              <tr>
                <th>Nº</th>
                <th>Review</th> 
                <th>Sentiment</th>
              </tr>
            </thead>
            <tbody>
              <% negativeReviews.forEach(function(review, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= review.Review || review.text %></td>
                  <td><%= review.Sentiment || review.sentiment %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No positive reviews found.</p>
        <% } %>
      </div>

      <script>
        function toggleReviews() {
          const filter = document.getElementById('review-filter').value;
          document.getElementById('positive-reviews-section').style.display = filter === 'positive' ? '' : 'none';
          document.getElementById('negative-reviews-section').style.display = filter === 'negative' ? '' : 'none';
        }
      </script>
    </main>


  <%- include('components/footer') -%>

